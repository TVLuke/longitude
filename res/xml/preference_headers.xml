<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android">

    <header android:fragment="de.lukeslog.longitude.userinterface.UserSettingsFragment"
            android:icon="@drawable/ic_action_user_b"
            android:title="User"
            android:summary="Set your account datfffsaa" />

    <header android:fragment="de.lukeslog.longitude.userinterface.PreferenceWithHeaders$Prefs2Fragment"
            android:icon="@drawable/ic_action_search"
            android:title="Prefs 2"
            android:summary="Some other preferences you can see.">
        <!-- Arbitrary key/value pairs can be included with a header as
             arguments to its fragment. -->
        <extra android:name="someKey" android:value="someHeaderValue" />
    </header>

    <header android:icon="@drawable/ic_action_search"
            android:title="Intent"
            android:summary="Launches an Intent.">
        <intent android:action="android.intent.action.VIEW"
                android:data="http://www.android.com" />
    </header>

</preference-headers>